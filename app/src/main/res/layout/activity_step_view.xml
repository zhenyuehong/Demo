<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_max_step="2"
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview2"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_max_step="3"
            app:h_pro_color="#56A000"
            app:h_pro_radius='6dp'
            app:h_pro_width="5dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_color="#B573EF"
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview5"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingLeft="30dp"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewHorizontal
            android:id="@+id/hflowview6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="30dp"
            app:h_bg_color="#000"
            app:h_bg_radius="6dp"
            app:h_bg_width='4dp'
            app:h_pro_color="#808080"
            app:h_pro_radius='4dp'
            app:h_pro_width="2dp"
            app:h_text_padding='10dp'
            app:h_textsize='10dp'
            app:h_time_padding='17dp'/>

        <com.mtelnet.stepview.FlowViewVertical
            android:id="@+id/vflow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:v_bgPositionX="40dp"
            app:v_bg_color="#029dd5"
            app:v_bg_radius="8dp"
            app:v_bg_width="4dp"
            app:v_interval="80dp"
            app:v_max_step="10"
            app:v_pro_color="#cdcbcc"
            app:v_pro_radius="8dp"
            app:v_pro_step="9"
            app:v_pro_width="4dp"
            app:v_textMoveTop="7dp"
            app:v_textsize="14dp"/>

    </LinearLayout>
</ScrollView>
